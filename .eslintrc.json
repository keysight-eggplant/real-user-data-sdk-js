{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "requireConfigFile": false
  },
  "rules": {
    "no-unused-vars": 1,
    "no-multiple-empty-lines": 2,
    "class-methods-use-this": 0,
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "log"
        ]
      }
    ],
    "arrow-parens": 2,
    "generator-star-spacing": 0,
    "no-debugger": 2,
    "no-undef": 1,
    "space-before-function-paren": 0,
    "prefer-template": 1,
    "sort-imports": 0,
    "global-require": 0,
    "object-curly-spacing": 0,
    "padded-blocks": 0,
    "new-parens": 0,
    "strict": 0,
    "arrow-body-style": 1,
    "no-useless-escape": 0,
    "max-len": 1,
    "no-underscore-dangle": 1,
    "prefer-promise-reject-errors": 1,
    "no-useless-constructor": 1,
    "brace-style": 0,
    "new-cap": 1,
    "no-plusplus": 1,
    "no-param-reassign": 0,
    "no-restricted-properties": 1,
    "no-bitwise": 1,
    "import/extensions": 0,
    "node/file-extension-in-import": [
      "warn",
      "always"
    ],
    "node/no-unpublished-import": [
      "error",
      {
        "allowModules": [
          "sinon",
          "chai"
        ]
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [
          "dynamicImport",
          "modules"
        ]
      }
    ]
  }
}